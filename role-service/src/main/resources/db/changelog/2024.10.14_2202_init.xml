<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

  <changeSet id="2024.10.14_2202_init_1" author="VekovshininAYU">
    <comment>Добавление базовой последовательности</comment>

    <createSequence sequenceName="base_seq" minValue="1" startValue="1"/>
  </changeSet>

  <changeSet id="2024.10.14_2202_init_2" author="VekovshininAYU">
    <comment>Добавление таблицы roles</comment>

    <createTable tableName="roles" remarks="Таблица ролей">
      <column name="entity_id" type="bigint"
        remarks="Id роли">
        <constraints
          nullable="false"
          primaryKey="true" primaryKeyName="pk_roles"/>
      </column>

      <column name="role_name" type="varchar(1024)"
        remarks="Название роли">
      </column>

      <column name="description" type="varchar(4000)"
        remarks="Описание роли">
      </column>
    </createTable>
  </changeSet>

</databaseChangeLog>
